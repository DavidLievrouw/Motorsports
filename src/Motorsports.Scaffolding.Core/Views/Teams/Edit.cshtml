@model Team

@{
  ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team</h4>
<hr/>
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id"/>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Sport" class="control-label"></label>
        <select asp-for="Sport" class="form-control" asp-items="ViewBag.Sport"></select>
        <span asp-validation-for="Sport" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        @Html.EditorFor(_ => _.Country, "Country", new {
          Countries = ((SelectList) ViewBag.Country).Items,
          SelectedCountry = Model.Country,
          TargetProperty = nameof(Model.Country)
        })
        <span asp-validation-for="Country" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default"/>
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>