@model IEnumerable<Motorsports.Scaffolding.Core.Models.DisplayModels.SeasonDisplayModel>

@{
  ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
  <a asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Sport)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Label)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.StartDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.EndDate)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WinningParticipantIds)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.WinningTeamId)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in Model) {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.RelatedSport.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Label)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.StartDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.EndDate)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.WinningParticipants, nameof(item.WinningParticipants))
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.WinningTeam, nameof(item.WinningTeam))
      </td>
      <td>
        <a asp-action="Index" asp-controller="Rounds" asp-route-id="@item.Id">Rounds</a> |
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>