@using Motorsports.Scaffolding.Core.Services

@model Motorsports.Scaffolding.Core.Models.DisplayModels.SeasonDisplayModel

@inject IImageService _imageService

@{
  ViewData["Title"] = "Details of a season";
}

<h2>Details</h2>

<div>
  <blockquote>
    <div class="sportlogoContainer">
      <img class="sportlogo" src="@_imageService.GetSportLogo(Model.Sport)" alt="@Model.Sport" />
    </div>
    <h4 class="sportlogoName">Season</h4>
  </blockquote>
  <hr />
  <dl class="dl-horizontal">
    <dt>
      @Html.DisplayNameFor(model => model.Sport)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.RelatedSport.FullName)
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.Label)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.Label)
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.StartDate)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.StartDate)
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.EndDate)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.EndDate)
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.WinningTeamId)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.WinningTeam, nameof(Model.WinningTeam))
    </dd>
    <dt>
      @Html.DisplayNameFor(model => model.WinningParticipantIds)
    </dt>
    <dd>
      @Html.DisplayFor(model => model.WinningParticipants, nameof(Model.WinningParticipants))
    </dd>
  </dl>
</div>
<div>
  <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>