@using Motorsports.Scaffolding.Core.Services

@model IEnumerable<Sport>

@inject IImageService _imageService

@{
  ViewData["Title"] = "Sports";
}

<h2>Index</h2>

<p>
  <a asp-action="Create">Create New</a>
</p>

<blockquote>
  <h4 class="viewName">Sports</h4>
</blockquote>

<table class="table">
  <thead>
    <tr>
      <th>
        Logo
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.FullName)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in Model) {
    <tr>
      <td>
        <div class="sportoptionlogo">
          <img class="sportlogo" src="@_imageService.GetSportLogo(item.Name)" alt="@item.Name" />
        </div>
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.FullName)
      </td>
      <td>
        <a asp-action="Edit" asp-route-id="@item.Name">Edit</a> |
        <a asp-controller="Seasons" asp-action="IndexOfSport" asp-route-id="@item.Name">Seasons</a> |
        <a asp-action="Details" asp-route-id="@item.Name">Details</a>
      </td>
    </tr>
  }
  </tbody>
</table>